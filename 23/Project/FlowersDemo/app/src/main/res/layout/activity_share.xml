<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mrkj.flowersdemo.ui.activity.ShareActivity">
    <FrameLayout
        android:id="@+id/share_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/mrkj_shareone_postcard"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/with_20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_test"
                android:layout_width="@dimen/with_120dp"
                android:layout_height="@dimen/with_160dp"
                android:scaleType="centerInside"/>
            <LinearLayout
                android:layout_marginTop="@dimen/with_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="from："
                    android:textSize="@dimen/font_18sp"
                    android:textColor="@color/left_text_color"/>
                <mrkj.flowersdemo.view.MyEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:hint="发件人"
                    android:textColor="@color/left_text_color"
                    android:background="@null"
                    android:textSize="@dimen/font_18sp"
                    android:gravity="right" />
            </LinearLayout>

            <mrkj.flowersdemo.view.MyEditText
                android:id="@+id/input_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:lines="8"
                android:maxLines="6"
                android:textSize="@dimen/font_18sp"
                android:gravity="top"/>
            <LinearLayout
                android:layout_marginTop="@dimen/with_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to："
                    android:textSize="@dimen/font_18sp"
                    android:textColor="@color/left_text_color"/>
                <mrkj.flowersdemo.view.MyEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:hint="收件人"
                    android:textColor="@color/left_text_color"
                    android:background="@null"
                    android:textSize="@dimen/font_18sp"
                    android:gravity="right" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


    <RadioGroup
        android:id="@+id/share_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <RadioButton
            android:id="@+id/share_pyq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:layout_gravity="center_vertical"
            android:drawableTop="@drawable/selector_pyq_backgroud"
            android:gravity="center_horizontal"
            android:text="朋友圈"
            android:textColor="@color/left_text_color"
            android:textSize="@dimen/font_16sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/share_wx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:layout_gravity="center_vertical"
            android:drawableTop="@drawable/selector_wx_backgroud"
            android:gravity="center_horizontal"
            android:text="微信"
            android:textColor="@color/left_text_color"
            android:textSize="@dimen/font_16sp"
            android:textStyle="bold" />
    </RadioGroup>
</RelativeLayout>
