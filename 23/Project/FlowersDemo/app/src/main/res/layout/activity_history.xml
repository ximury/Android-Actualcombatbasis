<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="mrkj.flowersdemo.ui.activity.HistoryActivity">

    <ImageView
        android:layout_marginTop="@dimen/with_20dp"
        android:layout_width="@dimen/with_80dp"
        android:layout_height="@dimen/with_80dp"
        android:src="@mipmap/mrkj_emoji"/>
    <TextView
        android:layout_marginTop="@dimen/with_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微笑"
        android:textSize="@dimen/font_20sp"
        android:textStyle="bold"
        android:textColor="@color/left_text_color"/>
    <!-- 种植的花儿 -->
    <LinearLayout
        android:layout_marginTop="@dimen/with_10dp"
        android:layout_marginLeft="@dimen/with_10dp"
        android:layout_marginRight="@dimen/with_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_white_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/with_20dp"
                android:text="种植的花儿"
                android:textSize="@dimen/font_18sp"
                android:textColor="@color/left_text_color"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/with_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/with_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="今天"
                    android:textSize="@dimen/font_16sp"
                    android:textColor="@color/left_text_color"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="@dimen/with_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="昨天"
                    android:textSize="@dimen/font_16sp"
                    android:textColor="@color/left_text_color"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="@dimen/with_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="总数"
                    android:textSize="@dimen/font_16sp"
                    android:textColor="@color/left_text_color"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/with_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/plant_today"
                    android:layout_width="@dimen/with_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="@dimen/font_16sp"
                    android:textColor="@color/left_text_color"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/plant_yesterday"
                    android:layout_width="@dimen/with_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="@dimen/font_16sp"
                    android:textColor="@color/left_text_color"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/plant_all"
                    android:layout_width="@dimen/with_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="@dimen/font_16sp"
                    android:textColor="@color/left_text_color"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 分享的花儿 -->
    <LinearLayout
        android:layout_marginTop="@dimen/with_10dp"
        android:layout_marginLeft="@dimen/with_10dp"
        android:layout_marginRight="@dimen/with_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_white_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/with_20dp"
                android:text="分享的花儿"
                android:textSize="@dimen/font_18sp"
                android:textColor="@color/left_text_color"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/with_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/with_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="今天"
                    android:textSize="@dimen/font_16sp"
                    android:textColor="@color/left_text_color"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="@dimen/with_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="昨天"
                    android:textSize="@dimen/font_16sp"
                    android:textColor="@color/left_text_color"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="@dimen/with_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="总数"
                    android:textSize="@dimen/font_16sp"
                    android:textColor="@color/left_text_color"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/with_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/share_today"
                    android:layout_width="@dimen/with_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="@dimen/font_16sp"
                    android:textColor="@color/left_text_color"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/share_yesterday"
                    android:layout_width="@dimen/with_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="@dimen/font_16sp"
                    android:textColor="@color/left_text_color"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/share_all"
                    android:layout_width="@dimen/with_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="@dimen/font_16sp"
                    android:textColor="@color/left_text_color"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 折线图 -->
    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/line_chart"
        android:layout_margin="@dimen/with_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
