<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_light"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_im_btn"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="损耗报表"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/add_task_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="新建"
            android:textColor="@android:color/white"
            android:textSize="17sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt">
<LinearLayout
    android:id="@+id/set_time_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:gravity="center"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/send_task_back_year"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/enter_kuang"
        android:hint="年"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:maxLength="4"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="15sp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="年"
        android:layout_centerVertical="true"
        android:textSize="15sp" />

    <TextView

        android:id="@+id/send_task_back_month"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/enter_kuang"
        android:hint="月"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:maxLength="2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="月"
        android:layout_centerVertical="true"
        android:textSize="15sp" />
</LinearLayout>


        <Spinner
            android:background="@mipmap/sipner"
            android:id="@+id/task_sp"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            >

        </Spinner>
    </RelativeLayout>

<TextView
    android:layout_below="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#CDCDCD"/>
    <ListView
        android:id="@+id/task_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp">

    </ListView>

</RelativeLayout>