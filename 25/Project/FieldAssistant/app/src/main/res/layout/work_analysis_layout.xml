<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_light"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_im_btn"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="业务分析"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/img_one"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="65dp"
        android:background="@mipmap/kehufenxitu" />

    <ImageView
        android:id="@+id/img_two"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="65dp"
        android:background="@mipmap/dingdanfenxitu" />

    <ImageView
        android:id="@+id/img_three"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="65dp"
        android:background="@mipmap/langyabang" />


    <TextView
        android:id="@+id/analysis_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_one"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:text="有效   人"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/analysis_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_two"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:text="成单   %"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/analysis_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/img_three"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:text="业绩   名"
        android:textSize="17sp" />
    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/all_analysis_line"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginBottom="60dp"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>