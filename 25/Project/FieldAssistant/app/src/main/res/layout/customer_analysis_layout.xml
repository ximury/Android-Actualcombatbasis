<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/bt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_light"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_im_btn"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="客户分析图"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/see_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="查看分布图"
            android:textColor="@android:color/white"
            android:textSize="13sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/bt">
        <LinearLayout
            android:id="@+id/set_time_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/send_task_back_year"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_kuang"
            android:layout_centerVertical="true"
            android:maxLength="4"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="15sp" />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年"
            android:layout_centerVertical="true"
            android:textSize="15sp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/send_task_back_month"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_kuang"
            android:layout_centerVertical="true"
            android:maxLength="2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:textSize="15sp" />
     </LinearLayout>
        <Button
            android:id="@+id/search_customer_btn"
            android:text="检索"
            android:layout_marginLeft="150dp"
            android:layout_width="50dp"
            android:background="@android:color/holo_blue_light"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_height="25dp" />
    </RelativeLayout>

    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/customer_pie_show"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="250dp"
        android:layout_height="250dp" />
    <TextView
        android:textSize="20sp"
        android:text="客户属性："
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="粘性客户："
            android:textSize="17sp" />
        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="20人"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="17sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="一般客户："
            android:textSize="17sp" />
        <TextView
            android:id="@+id/tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="20人"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="17sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="潜在客户："
            android:textSize="17sp" />
        <TextView
            android:id="@+id/tv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="20人"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="17sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="初级客户："
            android:textSize="17sp" />
        <TextView
            android:id="@+id/tv_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="20人"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="17sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="VIP客户："
            android:textSize="17sp" />
        <TextView
            android:id="@+id/tv_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="20人"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="17sp" />

    </RelativeLayout>
</LinearLayout>